<Rule
    Name="VbcCommandLineArgs"
    DisplayName="Vbc command-line arguments"
    PageTemplate="generic"
    Description="Vbc command-line arguments"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

    <!-- Rule represents the VbcCommandLineArgs item that contains a list of arguments that we get back from Compile -->

    <Rule.DataSource>
        <DataSource Persistence="VbcCommandLineArgs" ItemType="VbcCommandLineArgs" HasConfigurationCondition="False"
                SourceType="TargetResults" MSBuildTarget="CompileDesignTime" />
    </Rule.DataSource>

</Rule>
