  <StringProperty Name="DisplayName" DisplayName="Wyświetl nazwę" Visible="False" />
  <BoolProperty Name="CopyPayload" DisplayName="Kopiuj ładunek" />
  <BoolProperty Name="ExpandContent" DisplayName="Rozwiń zawartość" />
