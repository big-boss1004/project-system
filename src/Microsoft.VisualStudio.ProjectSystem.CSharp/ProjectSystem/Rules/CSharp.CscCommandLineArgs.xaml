<Rule
    Name="CscCommandLineArgs"
    DisplayName="Csc command-line arguments"
    PageTemplate="generic"
    Description="Csc command-line arguments"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

  <!-- Rule represents the CscCommandLineArgs item that contains the split arguments that we get back from Compile -->

  <Rule.DataSource>
    <DataSource Persistence="CscCommandLineArgs" ItemType="CscCommandLineArgs" HasConfigurationCondition="False"
                SourceType="TargetResults" MSBuildTarget="Compile" />
  </Rule.DataSource>

</Rule>
