<Project>

  <PropertyGroup>
    <!-- IMPORTANT: These assembly versions must always be 3 digits. -->
    <!-- This should try to stay up to date with the highest version available on build machines. -->
    <MinimumRequiredVSVersion>16.8.1</MinimumRequiredVSVersion>
    <!-- This should always match the VS release being targeted. -->
    <!-- NOTICE: When this value is changed, it must also be changed in version.json ("version" & "assemblyVersion") at the repo root. -->
    <ProjectSystemVersion>17.4.0</ProjectSystemVersion>
    <!--
      IMPORTANT: The reason we use 99.0.0 is because we need a version number that will always be above the published version of the assemblies/packages.
      This causes VS to always prefer our locally build packages for debugging (F5) purposes.
    -->
    <LocalBuildVersion>99.0.0</LocalBuildVersion>
  </PropertyGroup>

</Project>
